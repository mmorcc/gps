<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include
        android:id="@+id/header_in"
        layout="@layout/header"></include>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <TextView
               android:id="@+id/device"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:maxHeight="100dp"
               android:layout_marginTop="20dp"
               android:text="当前设备：" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/btn_start0"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="0dp"
                   android:text="连接服务器" />

               <Button
                   android:id="@+id/btn_stop0"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="发送数据" />

               <TextView
                   android:id="@+id/result0"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxHeight="100dp"
                   android:layout_marginTop="20dp"
                   android:text="返回" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/btn_start1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="10dp"
                   android:text="连接RTK" />

               <Button
                   android:id="@+id/btn_stop1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="断开RTK" />


               <TextView
                   android:id="@+id/result1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:maxHeight="50dp"
                   android:text="返回" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/ppp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="10dp"
                   android:text="ppp定位" />

               <Button
                   android:id="@+id/ppp_stop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="停止ppp" />


               <TextView
                   android:id="@+id/ppp_result"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:maxHeight="50dp"
                   android:text="返回" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/btn_start"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="50dp"
                   android:text="开始定位" />

               <Button
                   android:id="@+id/btn_stop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="停止定位" />


               <Button
                   android:id="@+id/send"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="发送单点定位" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:padding="15dp">

               <TextView
                   android:id="@+id/tv_location_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="定位状态："
                   android:textSize="16dp" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:text="位置信息："
                       android:textSize="18dp" />

                   <Button
                       android:id="@+id/btn_cope"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:text="复制位置信息" />

               </RelativeLayout>

               <TextView
                   android:id="@+id/tv_longitude"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="经度："
                   android:textSize="16dp" />

               <TextView
                   android:id="@+id/tv_latitude"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="纬度："
                   android:textSize="16dp" />

               <TextView
                   android:id="@+id/tv_height"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="海拔(M)："
                   android:textSize="16dp" />


               <TextView
                   android:id="@+id/tv_location_quality"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="定位质量标记："
                   android:textSize="16dp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tv_satellite_numbers"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="使用卫星数量："
                       android:textSize="16dp" />

                   <TextView
                       android:id="@+id/tv_shuiping_yinzi"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="水平精度因子："
                       android:textSize="16dp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tv_chafen_lingqi"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="差分零期(s)："
                       android:textSize="16dp" />

                   <TextView
                       android:id="@+id/tv_location_mistake"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="伪距误差(M)："
                       android:textSize="16dp" />

               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_marginBottom="10dp"
                   android:text="信噪比："
                   android:textSize="18dp" />

               <com.github.mikephil.charting.charts.BarChart
                   android:id="@+id/barchart"
                   android:layout_width="320dp"
                   android:visibility="gone"
                   android:layout_height="200dp" />

           </LinearLayout>
       </LinearLayout>
   </ScrollView>

</LinearLayout>

